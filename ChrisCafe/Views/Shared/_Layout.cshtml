@{ 
    string CurrentPage = ViewData["CurrentPage"].ToString();
}

<!DOCTYPE html>
<html>
<head>
    <environment exclude="Development">
        <script async src="https://www.googletagmanager.com/gtag/js?id=UA-124835962-1"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag() { dataLayer.push(arguments); }
            gtag('js', new Date());
            gtag('config', 'UA-124835962-1');
        </script>
    </environment>
    <meta charset="utf-8" />
    <meta name="description" content="Chris' Cafe" />
    <meta name="keywords" content="Chris Cafe,Chris,Cafe,Clearfield,Utah,UT" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="google-site-verification" content="5FDtW46ifbAoncJwI1ZReZECTkYuKzHb0F8AN9NO24c" />

    <link rel="icon" href="~/favicon.ico" />
    <link rel="icon" type="image/png" href="~/favicon-32x32.png" sizes="32x32" />
    <link rel="icon" type="image/png" href="~/favicon-16x16.png" sizes="16x16" />
    <title>@(@ViewData["Title"].ToString() == "" ? "Chris' Cafe" : @ViewData["Title"] + " - Chris' Cafe")</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <environment include="Development" exclude="Production">
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </environment>
    <environment include="Production" exclude="Development">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    @* --- Header --- *@
    <nav class="navbar navbar-expand-lg navbar-expand-md">
        @* --- Logo --- *@
        <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">
            <img class="navLogo img-fluid" src="~/images/logo-c.webp" alt="Chris' Cafe" />
        </a>

        @* --- Toggler --- *@
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarEntries" aria-controls="navbarEntries" aria-expanded="false" aria-label="Toggle navigation">
            <span class="icon menu-white"></span>
        </button>

        @* --- Nav Items --- *@
        <div class="collapse navbar-collapse" id="navbarEntries">
            <ul class="navbar-nav d-flex justify-content-around mr-auto ml-auto">
                <li class="nav-item navOption @(CurrentPage == "Home" ? "currentLocation" : "")"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="nav-item navOption @(CurrentPage == "Menu" ? "currentLocation" : "")"><a asp-area="" asp-controller="Menu" asp-action="Index">Menu</a></li>
                <li class="nav-item navOption @(CurrentPage == "Catering" ? "currentLocation" : "")"><a asp-area="" asp-controller="Catering" asp-action="Index">Catering</a></li>
                <li class="nav-item navOption @(CurrentPage == "About" ? "currentLocation" : "")"><a asp-area="" asp-controller="About" asp-action="Index">About</a></li>
                <li class="nav-item navOption @(CurrentPage == "ContactLocate" ? "currentLocation" : "")"><a asp-area="" asp-controller="About" asp-action="Contact">Contact & Location</a></li>
            </ul>
        </div>
    </nav>

    @* --- Body --- *@
    <section>
        <div class="@(CurrentPage == "Home" ? "container-fluid no-gutters" : "container top-bottom-margins") body-content">
            @RenderBody()
        </div>
    </section>

    @* --- Footer --- *@
    @await Html.PartialAsync("~/Views/Shared/Footers/MainFooter.cshtml")

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous" defer></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous" defer></script>
</body>
</html>
