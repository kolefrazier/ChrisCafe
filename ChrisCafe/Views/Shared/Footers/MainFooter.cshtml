@{
    string[] TargetPages = { "About", "ContactLocate" };
    bool UseDisplayClasses = TargetPages.Any(ViewData["CurrentPage"].ToString().Contains);
    string DisplayClasses = UseDisplayClasses ? "d-md-block d-none" : null;
}

<footer>
    <div class="container-fluid">
        <div class="row justify-content-md-center">
            <div class="col-sm-12 col-md-3 col-lg-3">
                <ul class="list-group">
                    <li class="list-group-item"><span class="list-header">Chris' Cafe</span></li>
                    <li class="list-group-item">
                        <div class="row justify-content-md-start">
                            @await Html.PartialAsync("~/Views/Shared/Partials/SocialMediaIcons.cshtml")
                        </div>
                    </li>
                    <li class="list-group-item"><span class="font-weight-light">&copy; Chris' Cafe</span></li>
                </ul>
            </div>
            <div class="col-sm-12 col-md-4 col-lg-3 @DisplayClasses">
                @await Html.PartialAsync("~/Views/Shared/Partials/Hours.cshtml")
            </div>
            <div class="col-sm-12 col-md-4 col-lg-3 @DisplayClasses">
                @await Html.PartialAsync("~/Views/Shared/Partials/ContactLocation.cshtml")
            </div>
        </div>
    </div>
</footer>
